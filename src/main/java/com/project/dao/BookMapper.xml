<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.dao.BookMapper">
    <!--增加一个book-->
    <insert id="addBook" parameterType="Books">
        insert into ssmbuild.books(bookName, bookCounts, detail)
        value (#{bookName},#{bookCounts},#{detail})
    </insert>
    <delete id="deleteBookById" parameterType="Integer">
        delete from ssmbuild.books where bookID = #{bookID}
    </delete>
    <update id="updateBook" parameterType="Books">
        update ssmbuild.books set
        <if test="books.bookName != null and books.bookName != ''">bookName=#{bookName},</if>
        <if test="books.bookCounts !=null and books.bookCounts !=''">bookCounts=#{bookCounts},</if>
       <if test="books.detail !=null and books.detail!=''">detail=#{detail}</if>
        where bookID=#{bookID}
    </update>
    <!--根据id查询,返回一个Book-->
    <select id="queryBookById" resultType="Books">
      select bookID,bookName,bookCounts,detail from ssmbuild.books
      where bookID = #{bookID}
   </select>

    <!--查询全部Book-->
    <select id="queryAllBook" resultType="Books">
      SELECT bookID,bookName,bookCounts,detail from ssmbuild.books
   </select>
    <!--条件查询全部Book-->
    <select id="queryBookByCriteria" resultType="Books">
      SELECT bookID,bookName,bookCounts,detail
      where 1=1
      <if test="books.bookName !=null">and bookName like '%'#{bookName}'%'</if>
        <if test="books.detail !=null">and detail like '%'#{detail}'%'</if>
      from ssmbuild.books
   </select>

</mapper>